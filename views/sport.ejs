<!DOCTYPE html>

<html lang="en" xmlns="http://www.w3.org/1999/xhtml">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">

    <title></title>

    <script src="/public/js/jquery-3.4.1.min.js"></script>

    <link rel="stylesheet" href="/public/css/bootstrap.min.css" />
    <link rel="stylesheet" href="/public/css/sportsinfopage.css" />
    <link href="https://fonts.googleapis.com/css?family=Rock+Salt&display=swap" rel="stylesheet">

    <script src="https://kit.fontawesome.com/5e9915cb23.js" crossorigin="anonymous"></script>
</head>

<body>
    <% include partials/navbar.ejs %>

    <!-- Carousel -->
    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active ci"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="1" class="ci"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="2" class="ci"></li>
        </ol>
        <div class="carousel-inner">
            <% var i=true;
             sport.images.forEach(function (image) {
                 if(i===true) { %>
            <div class="carousel-item active">
                <% i=false; }else{ %> <div class="carousel-item"> <% } %>
                    <img src="<%= image %>" class="d-block w-100" alt="...">
                </div>
                <% }); %>
            </div>
            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>


        <!-- Description -->
        <div class="description" id="desc">
            <h1 class="display-4">Sports Name</h1>
            <p id="des1">
                <%= sport.description %>
            </p>
        </div>
        <br />

        <p id="playertitle">Popular Players</p>
        <br />

        <!-- Grid Carousel Players-->
        <div class="container">
            <div class="row">
                <div class="col-sm-12 col-md-6 col-lg-4 mb-4">
                    <div class="card">
                        <img id="item1" src="http://www.eyebridge.in/blog/wp-content/uploads/2017/03/virat-on-pitch.jpg"
                            class="card-img-top" alt="...">
                        <div class="card-body">
                            <p class="card-text">Virat Kohli</p>
                        </div>
                    </div>
                </div>
                <div class="col-sm-12 col-md-6 col-lg-4 mb-4">
                    <div class="card">
                        <img id="item2" src="http://www.eyebridge.in/blog/wp-content/uploads/2017/03/virat-on-pitch.jpg"
                            class="card-img-top" alt="...">
                        <div class="card-body">
                            <p class="card-text">Virat Kohli</p>
                        </div>
                    </div>
                </div>
                <div class="col-sm-12 col-md-6 col-lg-4 mb-4">
                    <div class="card">
                        <img id="item3" src="http://www.eyebridge.in/blog/wp-content/uploads/2017/03/virat-on-pitch.jpg"
                            class="card-img-top" alt="...">
                        <div class="card-body">
                            <p class="card-text">Virat Kohli</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>


        <p style="text-align: center;">
            <span id="prev"><i class="fas fa-chevron-left"></i></span>
            <span id="next"><i class="fas fa-chevron-right"></i></span>
        </p>

        <br />

        <p id="teamtitle">Popular Teams</p>
        <br />
        <!-- Grid Carousel Teams -->
        <div class="container">
            <div class="row">
                <% sport.teams.forEach(function (team) { %>
                <div class="col-sm-12 col-md-6 col-lg-4 mb-4">
                    <a href="/team/<%= team._id %>">
                        <div class="card">
                            <img id="itemteam1" src="<%= team.image %>" class="card-img-top" alt="...">
                            <div class="card-body">
                                <p class="card-text"><%= team.name %></p>
                            </div>
                        </div>
                    </a>
                </div>
                <% }); %>
            </div>
        </div>


        <p style="text-align: center;">
            <span id="prev1"><i class="fas fa-chevron-left"></i></span>
            <span id="next1"><i class="fas fa-chevron-right"></i></span>
        </p>

        <!-- javascript -->
        <script src="/public/js/bootstrap.min.js"></script>
        <script src="/public/js/sportsinfopage.js"></script>


</body>

</html>